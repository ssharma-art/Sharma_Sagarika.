import numpy as np
import matplotlib.pyplot as plt

# ============================================================
# Visualization of Step 1 â€” Cu_init and Zn_mask
# ============================================================

# Load Step 1 arrays
data = np.load("step1_arrays.npz")
Cu_init = data["Cu_init"]
Zn_mask = data["Zn_mask"]
N = data["grid_size"]

# ------------------------------------------------------------
# Create visualization figure
# ------------------------------------------------------------
plt.figure(figsize=(12,5))

# --- 1. Initial Cu concentration map ---
plt.subplot(1,2,1)
plt.title("Initial Cu Concentration (Step 1)")
plt.imshow(Cu_init, cmap="viridis")
plt.colorbar(label="Cu fraction")
plt.axis("off")

# --- 2. Zn substitution mask ---
plt.subplot(1,2,2)
plt.title("Zn Mask (1 = Zn site, 0 = Cu site)")
plt.imshow(Zn_mask, cmap="gray_r")
plt.colorbar(label="Zn presence")
plt.axis("off")

plt.tight_layout()
plt.show()
